<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/calender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.applandeo.materialcalendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="one_day_picker"
                app:headerColor="@color/colorPrimary"
                app:selectionColor="@color/colorAccent"
                app:todayLabelColor="@color/colorPrimary"
                app:highlightedDaysLabelsColor="@color/colorHighlight"/>
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/calendarView"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-1679692392026530/9804564297">
            </com.google.android.gms.ads.AdView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/layout_border"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/statistics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Statistics"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:padding="8dp"
                android:background="@drawable/light_imageview_pressed"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/down_arrow"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:visibility="gone"
                    android:src="@drawable/down_arrow"
                    android:background="@drawable/primary_textview_pressed"/>

                <ImageView
                    android:id="@+id/up_arrow"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:visibility="visible"
                    android:src="@drawable/up_arrow"
                    android:background="@drawable/primary_textview_pressed"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:gravity="end"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/taka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Taka"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorText"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/myFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                app:elevation="8dp"/>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>